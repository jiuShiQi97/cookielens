{
  "manifest_version": 3,
  "name": "CookieLens",
  "version": "1.0.0",
  "description": "Intercepts cookie banners and provides transparent explanations before accepting cookies",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/explain.js", "content/content-cors-fix.js"],
      "css": ["content/modal.css"],
      "run_at": "document_end"
    }
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "cookie_blocking_rules",
        "enabled": false,
        "path": "content/dnr-rules.json"
      }
    ]
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
